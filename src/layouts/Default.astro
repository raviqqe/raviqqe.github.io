---
import "@fontsource-variable/noto-sans";

const { title, description } = Astro.props;
const canonicalUrl = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" sizes="any" href="/icon.svg" />
    <link rel="icon" type="image/png" sizes="16x16" href="/icon-16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/icon-32.png" />
    <link rel="icon" type="image/png" sizes="48x48" href="/icon-48.png" />
    <link rel="icon" type="image/png" sizes="64x64" href="/icon-64.png" />
    <link rel="icon" type="image/png" sizes="128x128" href="/icon-128.png" />
    <link rel="icon" type="image/png" sizes="256x256" href="/icon-256.png" />
    <link rel="icon" type="image/png" sizes="512x512" href="/icon-512.png" />
    <link rel="icon" type="image/png" sizes="1024x1024" href="/icon-1024.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <base target="_blank" />
    <meta property="og:title" content={title} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://raviqqe.com" />
    <meta property="og:image" content="https://raviqqe.com/icon.svg" />
    <meta property="og:description" content={description} />
    <meta name="twitter:card" content="summary" />
    <link rel="manifest" href="/manifest.json" />
    <link rel="canonical" href={canonicalUrl} />
    <script
      defer
      data-domain="raviqqe.com"
      is:inline
      src="https://plausible.io/js/plausible.js"></script>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --pitch-black-color: black;
    --black-color: #333;
    --gray-color: #666;
    --red-color: #d00;
    --white-color: #fdfdfd;

    --background-color: light-dark(
      var(--white-color),
      var(--pitch-black-color)
    );
    --text-color: light-dark(var(--black-color), var(--white-color));

    --monospace-font-family: monospace;

    color-scheme: light dark;
    font:
      16px "Noto Sans Variable",
      sans-serif;
  }

  body {
    background-color: var(--background-color);
    color: var(--text-color);
    max-width: 42rem;
    margin: 0 auto;
    padding: 1rem 1.2rem;
  }

  a,
  a:visited {
    text-decoration: underline;
    text-decoration-thickness: 0.05rem;
  }

  a:hover {
    text-decoration-thickness: 0.1rem;
  }

  code {
    font-family: var(--monospace-font-family);
  }
</style>
